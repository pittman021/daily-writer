<% include ./application/_header.ejs %>


<div class="container">


<div class="auth-box">

    <% if(message) { %>
      <% if ( message.length > 0 ) { %>
        <div class="flash"><%= message %></div>
      <% } %>
    <% } %>

<div id="stripeApiKey" data-value="<%= config.SRIPE_PUBLISHABLE_KEY %>" ></div>

<form action="/charge?plan=<%= plan %>" method="post" id="payment-form">
    <div class="form-row">
      <label for="card-element">
        Credit or debit card
      </label>
      <div id="card-element">
        <!-- A Stripe Element will be inserted here. -->
      </div>
  
      <!-- Used to display Element errors. -->
      <div id="card-errors" role="alert"></div>
    </div>
  
    <button>Submit Payment</button>
  </form>

</div>

</div>

<script src="/js/stripe_checkout.js"></script>


<% include ./application/_footer.ejs %>