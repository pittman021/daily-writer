<% include ./application/_header.ejs %>


<% include ./application/_navbar.ejs %>

<div id="auth">
<div class="auth-box">
			<h2>Login</h2><br>

			<% if ( message.length > 0 ) { %>
				<div class="flash"><%= message %></div>
			<% } %>

			
			<form action="/login" method="post">
				<div class="field">
					<div class="control">
								<input class="input" type="email" name="username" placeholder="email address" >
					</div>
				</div>
				<div class="field">
					<div class="control">
									<input class="input" type="password" name="password" placeholder="password" >
					</div>
				</div>
				<input class="button" type="submit"></input>
			</form>
			<br>
			<a href="/signup">Sign Up</a>

		</div>
</div>

<% include ./application/_footer.ejs %>
